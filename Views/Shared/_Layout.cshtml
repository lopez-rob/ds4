<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReserViento</title>

    <!-- Enlazar los archivos CSS de Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body style="background-color: #F7F3E3;">

    <!-- Header (Navegación) -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #009FB7;">
            <div class="container-fluid">
                <img src="~/Assets/logobg.png" id="logo" alt="Logo ReserViento" style="width: 350px; height: auto;">
                <div class="navbar-nav ml-auto">
                    <a class="nav-item nav-link" href="/">Inicio</a>
                    <a class="nav-item nav-link" href="/Reservas">Reservas</a>
                    <a class="nav-item nav-link" href="/ContactUs">Contact Us</a>
                    <a class="nav-item nav-link" href="/AboutUs">About Us</a>
                    <a class="nav-item nav-link" href="/Privacy">Privacy</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenido Principal -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Aquí se renderiza el contenido de cada vista -->
        </main>
    </div>

    <!-- Footer (Pie de página) -->
    <footer class="border-top footer text-muted" style="background-color: #6B4B3E; color: white; text-align: center;">
        <div class="container">
            &copy; 2024 ReserViento - <a href="#">Privacy</a>
        </div>
    </footer>

    <!-- Archivos JS de Bootstrap 5 (que incluye Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
